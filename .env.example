# ================================
# 应用配置
# ================================
NODE_ENV=production
NG_CLI_ANALYZE=false

# ================================
# 端口配置
# ================================
FRONTEND_PORT=4200
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
INFLUX_PORT=8086

# ================================
# 数据库配置
# ================================
DATABASE_URL=postgresql://fund_user:fund_password@localhost:5432/fund_monitor
POSTGRES_DB=fund_monitor
POSTGRES_USER=fund_user
POSTGRES_PASSWORD=fund_password

# ================================
# Redis 配置
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ================================
# InfluxDB 配置
# ================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=fund_monitor_token
INFLUXDB_ORG=fund_monitor
INFLUXDB_BUCKET=fund_data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=admin123456

# ================================
# JWT 配置
# ================================
JWT_SECRET=fund_monitor_jwt_secret_key
JWT_EXPIRES_IN=24h

# ================================
# API 配置
# ================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_BASE_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# ================================
# 服务端口配置
# ================================
DATA_COLLECTOR_PORT=8000
MONITOR_ENGINE_PORT=8001
NOTIFICATION_PORT=8002
BACKTEST_PORT=8003

# ================================
# 外部 API 配置
# ================================
TTFUND_API_BASE_URL=https://fund.eastmoney.com
SINA_API_BASE_URL=https://hq.sinajs.cn

# ================================
# 微信通知配置
# ================================
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=
WECHAT_WEBHOOK_KEY=

# ================================
# 邮件配置
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# ================================
# Celery 配置
# ================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ================================
# 环境配置
# ================================
ENVIRONMENT=development
DEBUG=true

# ================================
# Docker 配置
# ================================
# Nginx 配置
NGINX_HOST=localhost
NGINX_PORT=8000

# Traefik 配置
ACME_EMAIL=admin@example.com

# ================================
# SSL 配置 (HTTPS 部署)
# ================================
# SSL_CERT_PATH=./infrastructure/ssl/cert.pem
# SSL_KEY_PATH=./infrastructure/ssl/key.pem

# ================================
# CORS 配置
# ================================
CORS_ORIGIN=http://localhost:4200
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ================================
# 缓存配置
# ================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000